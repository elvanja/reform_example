<%= form_for @form do |f| %>
  <% if @form.errors.any? %>
    <div>
      <h3><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h3>

      <ul>
        <% @form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, "Album Title" %>
  <%= f.text_field :title %>

  <p>Songs:</p>
  <div id="songs">
  <%= f.fields_for :songs do |song| %>
    <div>
      <%= song.label :name %>
      <%= song.text_field :name, class: "song_name" %>
    </div>
  <% end %>
  </div>

  <div id="song_template" style="visibility:hidden; height: 0px">
    <%= f.fields_for :empty_song do |song| %>
      <div>
          <%= song.label :name %>
          <%= song.hidden_field :id, class: "song_id" %>
          <%= song.text_field :name, class: "song_name" %>
      </div>
    <% end %>
  </div>

  <%= link_to "Add Song", "#", id: "add_song" %>
  <br/>
  <br/>

  <%= f.submit %>
<% end %>

<%= link_to "Back to Albums", albums_path, class: 'btn'  %>
